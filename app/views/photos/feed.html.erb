<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1><%= @user.username %>'s feed:</h1>

    <ul class="nav nav-pills nav-justified">
      
      <li class="nav-item">
        <%= link_to "Posts", user_path(@user.username), class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "Liked photos", liked_photos_path(@user.username), class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "Feed", feed_path(@user.username), class: "nav-link"%>
      </li>

      <li class="nav-item">
        <%= link_to "Followers", followers_path(@user.username), class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "Following", following_path(@user.username), class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<% @user.feed.each do |photo| %>
  <%= render "photos/photo", photo: photo %>
<% end %>